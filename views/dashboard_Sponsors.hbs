{{!-- --}}
{{> dashboardHeader}}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <button type="button" class="btn btn-success" data-toggle="modal" data-target="#sponsorModal">
                + New sponsor
            </button>
            <hr>
            <div class="modal fade" id="sponsorModal" tabindex="-1">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">New sponsor</h5>
                            <button type="button" class="close" data-dismiss="modal">
                                <span>&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div id="response"></div>
                            <form id="sponsorForm">
                                <div class="form-group">
                                    <label for="title"><span style="color:red">*</span>Name:</label>
                                    <input type="text" class="form-control" id="title" name="title"
                                        placeholder="ex: Exxon Mobile" required>
                                </div>
                                <div class="form-group">
                                    <label for="type"><span style="color:red">*</span>Type:</label>
                                    <select class="form-control" id="type" name="type" required>
                                        {{#if types}}
                                        {{#each types}}
                                        <option value="{{id}}">{{name}}</option>
                                        {{/each}}
                                        {{else}}
                                        <option>Please add types.</option>
                                        {{/if}}
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="logo"><span style="color:red">*</span>Logo:</label>
                                    <input type="file" class="form-control" id="logo" name="logo" required>
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" form="sponsorForm" class="btn btn-success">Create</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{#if sponsors}}
        <div class="col-12">
            <h2 class="text-center">Sponsors</h2>
        </div>
        <div class="col-4 offset-4">
            <div id="actionResponse"></div>
        </div>
        <div class="col-12">
            <table class="table table-hover">
                <thead class="bg-light">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Title</th>
                        <th scope="col">Type</th>
                        <th scope="col">Logo</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each sponsors}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{title}}</td>
                        <td>{{typename}}</td>
                        <td><img src="/uploads/sponsors/{{logoFilename}}" alt="{{logoFilename}}" width="50"
                                height="50" /></td>
                        <td><button data-targetId="{{id}}" class="btn btn-danger delBtn">Remove</button></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        <div class="col-12 d-flex justify-content-center">
            <nav>
                <ul class="pagination">
                    {{#each paginationLinks}}
                    {{{this}}}
                    {{/each}}
                </ul>
            </nav>
        </div>
        {{else}}
        <div class="col-12">
            <p class="text-center">No sponsors yet.</p>
        </div>
        {{/if}}
    </div>
</div>

{{> dashboardFooter}}