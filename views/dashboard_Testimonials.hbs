{{!-- --}}
{{> dashboardHeader}}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <button type="button" class="btn btn-success" data-toggle="modal" data-target="#testimonialModal">
                + New testimonial
            </button>
            <hr>
            <div class="modal fade" id="testimonialModal" tabindex="-1">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">New testimonial</h5>
                            <button type="button" class="close" data-dismiss="modal">
                                <span>&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div id="response"></div>
                            <form id="testimonialForm">
                                <div class="form-group">
                                    <label for="speaker"><span style="color:red">*</span>Speaker:</label>
                                    <select class="form-control" id="speaker" name="speaker" required>
                                        {{#if speakers}}
                                        {{#each speakers}}
                                        <option value="{{id}}">{{fullname}}</option>
                                        {{/each}}
                                        {{else}}
                                        <option>Please add speaker.</option>
                                        {{/if}}
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="impression"><span style="color:red">*</span>Impression:</label>
                                    <textarea class="form-control" id="impression" name="impression" rows="4"
                                        placeholder="Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam
nonummy nibh euismod tincidunt ut laoreet dolore magna aliquam erat" required></textarea>
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" form="testimonialForm" class="btn btn-success">Create</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{#if testimonials}}
        <div class="col-12">
            <h2 class="text-center">Testimonials</h2>
        </div>
        <div class="col-4 offset-4">
            <div id="response"></div>
        </div>
        <div class="col-12">
            <table class="table table-hover">
                <thead class="bg-light">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Speaker</th>
                        <th scope="col">Position</th>
                        <th scope="col">Company</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each testimonials}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{fullname}}</td>
                        <td>{{position}}</td>
                        <td>{{company}}</td>
                        <td>
                            <button data-targetId="{{id}}" class="btn btn-warning viewBtn" data-toggle="modal"
                                data-target="#viewModal">View</button>
                            <button data-targetId="{{id}}" class="btn btn-danger delBtn">Remove</button>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            <div class="modal fade" id="viewModal" tabindex="-1">
                <div class="modal-dialog modal-md">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title"></h5>
                            <button type="button" class="close" data-dismiss="modal">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 d-flex justify-content-center">
            <nav>
                <ul class="pagination">
                    {{#each paginationLinks}}
                    {{{this}}}
                    {{/each}}
                </ul>
            </nav>
        </div>
        {{else}}
        <div class="col-12">
            <p class="text-center">No testimonials yet.</p>
        </div>
        {{/if}}
    </div>
</div>

{{> dashboardFooter}}