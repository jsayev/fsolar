{{!-- --}}
{{> dashboardHeader}}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <button type="button" class="btn btn-success" data-toggle="modal" data-target="#galleryModal">
                + New picture
            </button>
            <hr>
            <div class="modal fade" id="galleryModal" tabindex="-1">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">New picture</h5>
                            <button type="button" class="close" data-dismiss="modal">
                                <span>&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div id="response"></div>
                            <form id="pictureForm">
                                <div class="form-group">
                                    <label for="day"><span style="color:red">*</span>Day:</label>
                                    <input type="text" class="form-control" id="day" name="day" placeholder="ex: 1"
                                        required>
                                </div>
                                <div class="form-group">
                                    <label for="picture"><span style="color:red">*</span>Picture:</label>
                                    <input type="file" class="form-control" id="picture" name="picture" required>
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" form="pictureForm" class="btn btn-success">Add</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{#if pictures}}
        <div class="col-12">
            <h2 class="text-center">Pictures</h2>
        </div>
        <div class="col-4 offset-4">
            <div id="response"></div>
        </div>
        <div class="col-12 d-flex flex-wrap justify-content-center">
            {{#each pictures}}
            <div class="card mb-4 mx-2" style="width: 18rem;">
                <img src="/uploads/gallery/{{pictureFilename}}" class="card-img-top" style="width:100%;height:70%"
                    alt="{{pictureFilename}}">
                <div class="card-body">
                    <h5 class="card-title">Day: {{dayOfTaken}}</h5>
                    <button data-targetId="{{id}}" class="btn btn-danger delBtn">Remove</button>
                </div>
            </div>
            {{/each}}
        </div>
        <div class="col-12 d-flex justify-content-center">
            <nav>
                <ul class="pagination">
                    {{#each paginationLinks}}
                    {{{this}}}
                    {{/each}}
                </ul>
            </nav>
        </div>
        {{else}}
        <div class="col-12">
            <p class="text-center">No pictures yet.</p>
        </div>
        {{/if}}
    </div>
</div>

{{> dashboardFooter}}