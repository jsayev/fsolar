{{!-- --}}
{{> dashboardHeader}}

<div class="container-fluid">
    <div class="row">
        {{#if agendaFile}}
        <div class="col-6 mx-auto">
            <div id="response">
            </div>
        </div>
        <div class="col-12">
            <table class="table table-hover">
                <thead class="bg-light">
                    <tr>
                        <th scope="col">File name</th>
                        <th scope="col">Upload Date</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    {{#with agendaFile}}
                    <tr>
                        <td>{{originalName}}</td>
                        <td>{{uploadDate}}</td>
                        <td>
                            <a class="btn btn-success" href="/eventagenda/{{fileName}}">Download</a>
                            <button class="btn btn-danger" id="deleteBtn">Delete</button>
                        </td>
                    </tr>
                    {{/with}}
                </tbody>
            </table>
        </div>
        {{else}}
        <div class="col-6 mx-auto">
            <h2 class="text-center">New Event Agenda</h2>
            <hr>
            <div id="response">
            </div>
            <form>
                <div class="input-group">
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="agendaFile" name="eagenda">
                        <label class="custom-file-label" for="agendaFile">Choose event agenda file</label>
                    </div>
                    <div class="input-group-append">
                        <button class="btn btn-success" type="submit">Upload</button>
                    </div>
                </div>
            </form>
        </div>
        {{/if}}
    </div>
</div>

{{> dashboardFooter}}