{{!-- --}}
{{> dashboardHeader}}

<div class="container">
    <div class="row">
        {{#if summit}}
        <h1>we have a summit here</h1>
        {{else}}
        <div class="col-8 mx-auto">
            <h3 class="text-center">New Summit</h3>
            <hr>
            <form>
                <div class="form-group">
                    <label for="title">Title:</label>
                    <input type="text" class="form-control" id="title" name="title"
                        placeholder="ex: Future Solar Energy Summit">
                </div>
                <div class="form-group">
                    <label for="edition">Edition:</label>
                    <input type="text" class="form-control" id="edition" name="edition" placeholder="ex: 2ND Edition">
                </div>
                <div class="form-group">
                    <label for="location">Location:</label>
                    <input type="text" class="form-control" id="location" name="location"
                        placeholder="ex: Germany Hamburg">
                </div>
                <div class="form-group">
                    <label for="date">Date:</label>
                    <input type="date" class="form-control" id="date" name="date">
                </div>
                <div class="form-group">
                    <label for="about">About:</label>
                    <textarea class="form-control" id="about" name="about" rows="4"
                        placeholder="About summit"></textarea>
                </div>
                <div class="form-group">
                    <label for="videoLink">Video Link:</label>
                    <input type="text" class="form-control" id="videoLink" name="videoLink"
                        placeholder="ex: https://www.youtube.com/watch?v=9w7ZJphWi6o">
                </div>
                <div class="form-group">
                    <label for="file">Background:</label>
                    <input type="file" class="form-control" id="file" name="file">
                </div>
                <button type="button" class="btn btn-warning" id="addBtn">+ more background</button>
                <div class="form-group">
                    <input type="submit" class="btn btn-success float-right" value="Create">
                </div>
            </form>
        </div>
        {{/if}}
    </div>
</div>

{{> dashboardFooter}}